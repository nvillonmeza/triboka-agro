/**
 * Sistema de Notificaciones Din谩micas para Triboka
 * Maneja WebSockets, notificaciones push, y mensajer铆a interna
 */

class NotificationSystem {
    constructor(token, userId) {
        this.token = token;
        this.userId = userId;
        this.socket = null;
        this.notifications = [];
        this.unreadCount = 0;
        this.isConnected = false;
        
        this.init();
    }
    
    init() {
        this.connectWebSocket();
        this.setupNotificationPanel();
        this.setupEventListeners();
        this.checkBrowserNotificationPermission();
        this.loadStoredNotifications();
    }
    
    connectWebSocket() {
        // Importar Socket.IO desde CDN si no est谩 disponible
        if (typeof io === 'undefined') {
            const script = document.createElement('script');
            script.src = 'https://cdn.socket.io/4.8.0/socket.io.min.js';
            script.onload = () => this.initializeSocket();
            document.head.appendChild(script);
        } else {
            this.initializeSocket();
        }
    }
    
    initializeSocket() {
        // Verificar que tenemos token antes de conectar
        if (!this.token) {
            console.error(' No hay token disponible para autenticaci贸n WebSocket');
            return;
        }
        
        console.log(' Intentando conectar a WebSocket...');
        this.socket = io('http://localhost:5005', {
            auth: { token: this.token },
            transports: ['polling', 'websocket'], // Cambiar orden: polling primero
            upgrade: true,
            rememberUpgrade: true,
            timeout: 20000,
            forceNew: false,
            reconnection: true,
            reconnectionAttempts: 5,
            reconnectionDelay: 1000
        });
        
        this.socket.on('connect', () => {
            console.log(' Conectado al servidor de notificaciones');
            this.isConnected = true;
            this.updateConnectionStatus(true);
        });
        
        this.socket.on('connect_error', (error) => {
            console.error(' Error de conexi贸n WebSocket:', error);
            this.isConnected = false;
            this.updateConnectionStatus(false);
        });
        
        this.socket.on('disconnect', (reason) => {
            console.log(' Desconectado del servidor de notificaciones:', reason);
            this.isConnected = false;
            this.updateConnectionStatus(false);
        });
        
        this.socket.on('new_notification', (notification) => {
            this.handleNewNotification(notification);
        });
        
        this.socket.on('pending_notifications', (notifications) => {
            this.loadPendingNotifications(notifications);
        });
        
        this.socket.on('notification_marked_read', (data) => {
            this.markNotificationAsRead(data.notification_id);
        });
        
        this.socket.on('notifications_list', (notifications) => {
            this.updateNotificationsList(notifications);
        });
        
        this.socket.on('message_sent', (data) => {
            this.showSuccessMessage('Mensaje enviado exitosamente');
        });
        
        this.socket.on('message_error', (data) => {
            this.showErrorMessage(data.error);
        });
    }
    
    setupNotificationPanel() {
        // Crear panel de notificaciones si no existe
        if (!document.getElementById('notification-panel')) {
            this.createNotificationPanel();
        }
        
        // Crear indicador de notificaciones
        this.createNotificationIndicator();
    }
    
    createNotificationPanel() {
        const panelHTML = `
