    background: white;
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    border: 1px solid #e9ecef;
    z-index: 1050;
    overflow: hidden;
}

.notification-header {
    padding: 16px 20px;
    border-bottom: 1px solid #e9ecef;
    background: #f8f9fa;
    display: flex;
    justify-content: between;
    align-items: center;
}

.notification-actions {
    display: flex;
    align-items: center;
    gap: 8px;
}

.connection-status {
    font-size: 0.8rem;
}

.notification-filters {
    padding: 12px 16px;
    border-bottom: 1px solid #e9ecef;
}

.notification-content {
    max-height: 400px;
    overflow-y: auto;
}

.notification-list {
    padding: 0;
}

.notification-item {
    display: flex;
    padding: 12px 16px;
    border-bottom: 1px solid #f1f3f4;
    transition: background-color 0.2s;
}

.notification-item:hover {
    background-color: #f8f9fa;
}

.notification-item.unread {
    background-color: rgba(13, 110, 253, 0.05);
    border-left: 3px solid #0d6efd;
}

.notification-icon {
    width: 32px;
    flex-shrink: 0;
    text-align: center;
    padding-top: 2px;
}

.notification-content {
    flex-grow: 1;
    margin-left: 12px;
}

.notification-title {
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 4px;
    color: #333;
}

.notification-message {
    font-size: 0.85rem;
    color: #666;
    line-height: 1.4;
    margin-bottom: 6px;
}

.notification-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.75rem;
}

.notification-time {
    color: #999;
}

.notification-category {
    font-size: 0.65rem;
}

.notification-actions {
    flex-shrink: 0;
    margin-left: 8px;
}

.notification-footer {
    padding: 12px 16px;
    border-top: 1px solid #e9ecef;
    background: #f8f9fa;
    display: flex;
    justify-content: space-between;
}

.notification-info .notification-icon { color: #0dcaf0; }

