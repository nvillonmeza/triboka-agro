                        <span id="connection-status" class="connection-status ms-2">
                            <i class="bi bi-circle-fill text-success"></i>
                        </span>
                    </h5>
                    <div class="notification-actions">
                        <button class="btn btn-sm btn-outline-secondary me-2" onclick="notificationSystem.markAllAsRead()">
                            <i class="bi bi-check-all"></i> Marcar todas
                        </button>
                        <button class="btn btn-sm btn-primary" onclick="notificationSystem.openMessageComposer()">
                            <i class="bi bi-plus-circle"></i> Mensaje
                        </button>
                        <button class="btn-close" onclick="notificationSystem.togglePanel()"></button>
                    </div>
                </div>
                
                <div class="notification-filters">
                    <div class="btn-group btn-group-sm w-100" role="group">
