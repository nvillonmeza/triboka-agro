            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-plus-circle me-2"></i>Agregar Nuevo Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addProductForm">
                    <div class="mb-3">
                        <label class="form-label">Nombre del Producto *</label>
                        <input type="text" class="form-control" id="productName" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Descripci贸n</label>
                        <textarea class="form-control" id="productDescription" rows="3"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">Categor铆a *</label>
                            <select class="form-select" id="productCategory" required>
                                <option value="">Seleccionar...</option>
                                <option value="caf茅">Caf茅</option>
                                <option value="cacao">Cacao</option>
                                <option value="frutas">Frutas</option>
                                <option value="otros">Otros</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Unidad *</label>
                            <select class="form-select" id="productUnit" required>
                                <option value="kg">Kilogramos (kg)</option>
                                <option value="lb">Libras (lb)</option>
                                <option value="ton">Toneladas</option>
                                <option value="unidad">Unidades</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">Stock M铆nimo</label>
                            <input type="number" class="form-control" id="minStock" min="0" step="0.1">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Stock M谩ximo</label>
                            <input type="number" class="form-control" id="maxStock" min="0" step="0.1">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="addProduct()">Guardar Producto</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Agregar al Inventario -->
<div class="modal fade" id="addInventoryModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-plus-circle-fill me-2"></i>Agregar al Inventario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addInventoryForm">
                    <div class="row">
                        <div class="col-md-6">
