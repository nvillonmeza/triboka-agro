</div>

{% endblock %}

{% block extra_js %}
<script>
// Configuraci贸n de API - Apuntar a los microservicios locales
const API_BASE_URL = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1'
    ? 'http://localhost:5003'  // Backend principal
    : window.location.origin;   // Producci贸n

const INVENTORY_API_URL = 'http://localhost:5006/api/inventory'; // Microservicio de inventario
const NOTIFICATIONS_WS_URL = 'ws://localhost:5005'; // WebSocket de notificaciones

// Variables globales
let allInventoryItems = [];
let allProducts = [];

// Inicializaci贸n
document.addEventListener('DOMContentLoaded', function() {
    loadInventory();
    loadProducts();
    loadSuppliers();
    
    // Inicializar sistema de notificaciones (opcional)
    try {
        const token = getAuthToken();
        const userId = '{{ user.get("id", "") }}';
        console.log(' Token disponible:', !!token, 'UserId:', userId);
        
        if (token && userId) {
            console.log(' Inicializando sistema de notificaciones con token y userId');
            initNotificationSystem(token, parseInt(userId));
        } else {
            console.log(' Sistema de notificaciones no inicializado - falta token o userId');
            console.log(' Token:', token ? 'presente' : 'ausente');
            console.log(' UserId:', userId);
        }
    } catch (error) {
        console.log(' Error inicializando sistema de notificaciones:', error);
    }
});

// Funciones de carga de datos
async function loadInventory() {
    try {
        showLoading(true);
        const response = await fetch(`${INVENTORY_API_URL}/items`, {
            // headers: {
            //     'Authorization': `Bearer ${getAuthToken()}`
            // }
        });

        if (response.ok) {
            const data = await response.json();
            allInventoryItems = data.items || [];
            renderInventoryTable(allInventoryItems);
            updateMetrics(allInventoryItems);
        } else {
            throw new Error(`Error ${response.status}: ${response.statusText}`);
        }
    } catch (error) {
        console.error('Error loading inventory:', error);
        showToast('Error al cargar inventario', 'danger');
    } finally {
        showLoading(false);
    }
}

async function loadProducts() {
    try {
        const response = await fetch(`${INVENTORY_API_URL}/products`, {
            // headers: {
            //     'Authorization': `Bearer ${getAuthToken()}`
            // }
        });

        if (response.ok) {
            const data = await response.json();
            allProducts = data.products || [];
            populateProductSelect(allProducts);
        }
    } catch (error) {
        console.error('Error loading products:', error);
    }
}

async function loadSuppliers() {
    try {
        const response = await fetch(`${INVENTORY_API_URL}/suppliers`, {
            // headers: {
            //     'Authorization': `Bearer ${getAuthToken()}`
            // }
        });

        if (response.ok) {
            const data = await response.json();
            populateSupplierSelect(data.suppliers || []);
        }
    } catch (error) {
        console.error('Error loading suppliers:', error);
    }
}

// Funciones de renderizado
function renderInventoryTable(items) {
    const tbody = document.getElementById('inventoryTableBody');

    if (items.length === 0) {
        document.getElementById('emptyState').classList.remove('d-none');
        tbody.innerHTML = '';
        return;
    }

    document.getElementById('emptyState').classList.add('d-none');

    tbody.innerHTML = items.map(item => {
        const qualityBadge = getQualityBadge(item.quality_status);
        const expirationStatus = getExpirationStatus(item.expiration_date);
        const totalValue = (item.quantity * (item.cost_per_unit || 0)).toFixed(2);

        return `
            <tr>
                <td>${item.product_name || 'N/A'}</td>
                <td><span class="badge bg-secondary">${item.category || 'N/A'}</span></td>
                <td><strong>${item.quantity}</strong></td>
                <td>${item.unit || 'N/A'}</td>
                <td>${item.location || 'Sin ubicaci贸n'}</td>
                <td>${qualityBadge}</td>
                <td>${item.lot_id || 'N/A'}</td>
                <td>${expirationStatus}</td>
                <td>$${item.cost_per_unit ? item.cost_per_unit.toFixed(2) : '0.00'}</td>
                <td><strong>$${totalValue}</strong></td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <button class="btn btn-outline-primary" onclick="editInventoryItem(${item.id})" title="Editar">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-outline-danger" onclick="removeInventoryItem(${item.id})" title="Eliminar">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
        `;
    }).join('');
}

function updateMetrics(items) {
    const totalProducts = new Set(items.map(item => item.product_id)).size;
    const goodStock = items.filter(item => item.quantity > (item.min_stock || 0)).length;
    const lowStock = items.filter(item => item.quantity <= (item.min_stock || 0)).length;
    const totalValue = items.reduce((sum, item) => sum + (item.quantity * (item.cost_per_unit || 0)), 0);

    document.getElementById('totalProducts').textContent = totalProducts;
    document.getElementById('goodStock').textContent = goodStock;
    document.getElementById('lowStock').textContent = lowStock;
    document.getElementById('totalValue').textContent = `$${totalValue.toFixed(2)}`;
}

// Funciones de utilidad
function getQualityBadge(status) {
    const badges = {
        'good': '<span class="badge bg-success">Buen estado</span>',
        'fair': '<span class="badge bg-warning">Regular</span>',
        'poor': '<span class="badge bg-danger">Deficiente</span>'
    };
    return badges[status] || '<span class="badge bg-secondary">Desconocido</span>';
}

function getExpirationStatus(expirationDate) {
    if (!expirationDate) return '<span class="text-muted">Sin fecha</span>';

    const today = new Date();
    const expDate = new Date(expirationDate);
    const daysDiff = Math.ceil((expDate - today) / (1000 * 60 * 60 * 24));

    if (daysDiff < 0) {
        return '<span class="badge bg-danger">Caducado</span>';
    } else if (daysDiff <= 30) {
        return `<span class="badge bg-warning">${daysDiff} d铆as</span>`;
    } else {
        return `<span class="text-muted">${expDate.toLocaleDateString()}</span>`;
    }
}

function populateProductSelect(products) {
    const select = document.getElementById('inventoryProduct');
    select.innerHTML = '<option value="">Seleccionar producto...</option>' +
        products.map(product => `<option value="${product.id}">${product.name}</option>`).join('');
}

function populateSupplierSelect(suppliers) {
    const select = document.getElementById('inventorySupplier');
    select.innerHTML = '<option value="">Sin proveedor</option>' +
        suppliers.map(supplier => `<option value="${supplier.id}">${supplier.name}</option>`).join('');
}

// Funciones de modales
function showAddProductModal() {
    const modal = new bootstrap.Modal(document.getElementById('addProductModal'));
    modal.show();
}

function showAddInventoryModal() {
    const modal = new bootstrap.Modal(document.getElementById('addInventoryModal'));
    modal.show();
}

// Funciones CRUD
async function addProduct() {
    const formData = {
        name: document.getElementById('productName').value,
        description: document.getElementById('productDescription').value,
        category: document.getElementById('productCategory').value,
        unit: document.getElementById('productUnit').value,
        min_stock: parseFloat(document.getElementById('minStock').value) || 0,
        max_stock: parseFloat(document.getElementById('maxStock').value) || null
    };

    if (!formData.name || !formData.category || !formData.unit) {
        showToast('Por favor complete todos los campos requeridos', 'warning');
        return;
    }

    try {
        const response = await fetch(`${INVENTORY_API_URL}/products`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${getAuthToken()}`
            },
            body: JSON.stringify(formData)
        });

        if (response.ok) {
            showToast('Producto agregado exitosamente', 'success');
            bootstrap.Modal.getInstance(document.getElementById('addProductModal')).hide();
            document.getElementById('addProductForm').reset();
            loadProducts();
        } else {
            throw new Error(`Error ${response.status}`);
        }
    } catch (error) {
        console.error('Error adding product:', error);
        showToast('Error al agregar producto', 'danger');
    }
}

async function addInventoryItem() {
    const formData = {
        product_id: parseInt(document.getElementById('inventoryProduct').value),
        quantity: parseFloat(document.getElementById('inventoryQuantity').value),
        location: document.getElementById('inventoryLocation').value,
        lot_id: document.getElementById('inventoryLot').value,
        quality_status: document.getElementById('inventoryQuality').value,
        expiration_date: document.getElementById('inventoryExpiration').value,
        cost_per_unit: parseFloat(document.getElementById('inventoryCost').value) || null,
        supplier_id: parseInt(document.getElementById('inventorySupplier').value) || null,
        notes: document.getElementById('inventoryNotes').value
    };

    if (!formData.product_id || !formData.quantity) {
        showToast('Por favor complete todos los campos requeridos', 'warning');
        return;
    }

    try {
        const response = await fetch(`${INVENTORY_API_URL}/items`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${getAuthToken()}`
            },
            body: JSON.stringify(formData)
        });

        if (response.ok) {
            showToast('Item agregado al inventario exitosamente', 'success');
            bootstrap.Modal.getInstance(document.getElementById('addInventoryModal')).hide();
            document.getElementById('addInventoryForm').reset();
            loadInventory();
        } else {
            throw new Error(`Error ${response.status}`);
        }
    } catch (error) {
        console.error('Error adding inventory item:', error);
        showToast('Error al agregar item al inventario', 'danger');
    }
}

// Funciones de filtros
function applyFilters() {
    const searchTerm = document.getElementById('searchInput').value.toLowerCase();
    const categoryFilter = document.getElementById('categoryFilter').value;
    const statusFilter = document.getElementById('statusFilter').value;
    const locationFilter = document.getElementById('locationFilter').value.toLowerCase();

    const filteredItems = allInventoryItems.filter(item => {
        const matchesSearch = !searchTerm ||
            (item.product_name && item.product_name.toLowerCase().includes(searchTerm));
        const matchesCategory = !categoryFilter || item.category === categoryFilter;
        const matchesLocation = !locationFilter ||
            (item.location && item.location.toLowerCase().includes(locationFilter));

        let matchesStatus = true;
        if (statusFilter) {
            if (statusFilter === 'warning') {
                matchesStatus = item.quantity <= (item.min_stock || 0);
            } else if (statusFilter === 'expired') {
                const expDate = item.expiration_date ? new Date(item.expiration_date) : null;
                matchesStatus = expDate && expDate < new Date();
            } else if (statusFilter === 'good') {
                matchesStatus = item.quality_status === 'good';
            }
        }

        return matchesSearch && matchesCategory && matchesLocation && matchesStatus;
    });

    renderInventoryTable(filteredItems);
}

function clearFilters() {
    document.getElementById('searchInput').value = '';
    document.getElementById('categoryFilter').value = '';
    document.getElementById('statusFilter').value = '';
    document.getElementById('locationFilter').value = '';
    renderInventoryTable(allInventoryItems);
}

// Funciones de acciones
async function editInventoryItem(itemId) {
    // TODO: Implementar edici贸n
    showToast('Funci贸n de edici贸n pr贸ximamente', 'info');
}

async function removeInventoryItem(itemId) {
    if (!confirm('驴Est谩 seguro de que desea eliminar este item del inventario?')) {
        return;
    }

    try {
        const response = await fetch(`${INVENTORY_API_URL}/items/${itemId}`, {
            method: 'DELETE',
            headers: {
                'Authorization': `Bearer ${getAuthToken()}`
            }
        });

        if (response.ok) {
            showToast('Item eliminado del inventario', 'success');
            loadInventory();
        } else {
            throw new Error(`Error ${response.status}`);
        }
    } catch (error) {
        console.error('Error removing inventory item:', error);
        showToast('Error al eliminar item', 'danger');
    }
}

// Funciones de utilidad
function getAuthToken() {
    // Obtener token de la sesi贸n (debe estar disponible en el contexto del template)
    return '{{ session.get("access_token", "") }}';
}

function showLoading(show) {
    document.getElementById('loadingIndicator').style.display = show ? 'block' : 'none';
}

function showToast(message, type = 'info') {
    // Usar toast de Bootstrap si est谩 disponible
    if (typeof bootstrap !== 'undefined' && bootstrap.Toast) {
        // Crear toast din谩micamente
        const toastContainer = document.querySelector('.toast-container');
        if (!toastContainer) {
            const container = document.createElement('div');
            container.className = 'toast-container position-fixed top-0 end-0 p-3';
            container.style.zIndex = '9999';
            document.body.appendChild(container);
        }

        const toastEl = document.createElement('div');
        toastEl.className = `toast align-items-center text-white bg-${type === 'danger' ? 'danger' : type === 'success' ? 'success' : type === 'warning' ? 'warning' : 'info'} border-0`;
        toastEl.setAttribute('role', 'alert');
        toastEl.innerHTML = `
            <div class="d-flex">
                <div class="toast-body">${message}</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        `;

        document.querySelector('.toast-container').appendChild(toastEl);
        const toast = new bootstrap.Toast(toastEl);
        toast.show();

        // Remover el toast despu茅s de que se oculte
        toastEl.addEventListener('hidden.bs.toast', () => {
            toastEl.remove();
        });
    } else {
        // Fallback: usar alert o console
        console.log(`Toast (${type}): ${message}`);
        // Solo mostrar alert para errores cr铆ticos
        if (type === 'danger') {
            alert(message);
        }
    }
}

// Event listeners
document.getElementById('searchInput').addEventListener('input', applyFilters);
document.getElementById('categoryFilter').addEventListener('change', applyFilters);
document.getElementById('statusFilter').addEventListener('change', applyFilters);
document.getElementById('locationFilter').addEventListener('input', applyFilters);
</script>
