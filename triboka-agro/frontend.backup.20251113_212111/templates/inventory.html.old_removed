                            <select class="form-select" id="inventoryProduct" required>
                                <option value="">Cargando productos...</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Cantidad *</label>
                            <input type="number" class="form-control" id="inventoryQuantity" min="0.1" step="0.1" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">Ubicaci贸n</label>
                            <input type="text" class="form-control" id="inventoryLocation" placeholder="Ej: Almac茅n Principal">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Lote</label>
                            <input type="text" class="form-control" id="inventoryLot" placeholder="Ej: LOT-2024-001">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">Estado de Calidad</label>
                            <select class="form-select" id="inventoryQuality">
                                <option value="good">Buen estado</option>
                                <option value="fair">Regular</option>
                                <option value="poor">Deficiente</option>
                            </select>
                        </div>
                        <div class="col-md-6">
