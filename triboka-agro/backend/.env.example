# Triboka BaaS Platform Environment Variables

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://triboka_user:triboka_pass@localhost:5432/triboka_baas

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://localhost:10002
BLOCKCHAIN_CHAIN_ID=100
BLOCKCHAIN_PRIVATE_KEY=your-blockchain-private-key
NFT_CONTRACT_ADDRESS=0x...
LOT_REGISTRY_ADDRESS=0x...

# API Configuration
API_BASE_URL=https://api.triboka.com
CORS_ORIGINS=https://app.triboka.com,http://localhost:3000

# Business Configuration
NFT_COMMISSION_USD=10
STARTER_PLAN_PRICE=99
PROFESSIONAL_PLAN_PRICE=299
ENTERPRISE_PLAN_PRICE=499

# File Upload Configuration (optional)
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_BUCKET_NAME=triboka-uploads
AWS_REGION=us-east-1

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@triboka.com
MAIL_PASSWORD=your-email-password

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://localhost:6379/0

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
DEFAULT_RATE_LIMIT=1000 per hour

# IPFS Configuration (optional)
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=https://gateway.ipfs.io